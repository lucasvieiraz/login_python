<LoginScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 20
            size_hint: None, None
            size: 300, 400
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: 'Login'
                font_size: 32
                size_hint_y: None
                height: 40
                color: 0.9, 0.9, 0.9, 1

            GridLayout:
                cols: 1
                spacing: 20
                size_hint_y: None
                height: self.minimum_height

                TextInput:
                    id: username
                    hint_text: 'Nome de Usuario'
                    multiline: False
                    size_hint_y: None
                    height: 40
                    background_color: 0.2, 0.2, 0.2, 1
                    foreground_color: 1, 1, 1, 1
                    cursor_color: 1, 1, 1, 1
                    padding: [10, 10, 10, 10]

                TextInput:
                    id: password
                    hint_text: 'Senha'
                    password: True
                    multiline: False
                    size_hint_y: None
                    height: 40
                    background_color: 0.2, 0.2, 0.2, 1
                    foreground_color: 1, 1, 1, 1
                    cursor_color: 1, 1, 1, 1
                    padding: [10, 10, 10, 10]

            Button:
                text: 'Login'
                size_hint_y: None
                height: 50
                background_color: 0.3, 0.6, 0.3, 1
                color: 1, 1, 1, 1
                on_press: app.login(username.text, password.text)

            Label:
                id: message
                text: ''
                size_hint_y: None
                height: 30
                color: (1, 0, 0, 1)  # Red color for error messages
